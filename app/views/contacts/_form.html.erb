
<div class="contact-form">
  <div class="title"><h3>Contact Details</h3></div>

  <%= form_for(@contact) do |form|%>
   <div class="row clearfix">
    <div class="form-group col-md-4 col-sm-6 col-xs-12">
      <%= form.label :email %>
      <%= form.text_field :email , placeholder: "Enter Your email" %>
    </div>
    <div class="form-group col-md-4 col-sm-6 col-xs-12">
      <%= form.label :working_hours %>
      <%# binding.pry %>
      <%= form.text_field :working_hours , placeholder: "Enter Your working_hours" %>
      </div>
      <div class="form-group col-md-4 col-sm-12 col-xs-12">
        <%= form.label :address %>
        <%= form.text_field :address , placeholder: "Enter Your address" %>
      </div>
      <div class="form-group col-md-12 col-sm-12 col-xs-12">
        <%= form.submit class: "btn btn-danger" %>
      </div>
   </div>
<% end %>

    